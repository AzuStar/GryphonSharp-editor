{
	"name": "gryphonsharp-vscode",
	"displayName": "G# vscode",
	"description": "Gryphon# visual editor",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/AzuStar/GryphonSharp-vscode.git"
	},
	"activationEvents": [
		"onCustomEditor:gsharp.nodeEditor"
	],
	"main": "./out/extension/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "gsharp.nodeEditor",
				"displayName": "G# Node Editor",
				"selector": [
					{
						"filenamePattern": "*.gs"
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile:extension": "tsc -p ./src/extension",
		"compile:editor": "tsc -p ./src/editor",
		"postcompile:editor": "rollup -c zscripts/rollupconf.editor.js",
		"lint": "eslint src --ext ts",
		"watch:editor": "tsc-watch -p ./src/editor --onSuccess \"rollup -c zscripts/rollupconf.editor.js\"",
		"watch:extension": "tsc -watch -p ./src/extension",
		"runner": "run-p {1}:* --"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@rollup/plugin-typescript": "^8.2.5",
		"@types/fs-extra": "^9.0.13",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.52",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"concurrently": "^6.4.0",
		"eslint": "^6.8.0",
		"glob": "^7.2.0",
		"konva": "^8.1.3",
		"mocha": "^7.1.2",
		"rollup": "^2.56.3",
		"ts-node": "^10.4.0",
		"tsc-watch": "^4.5.0",
		"tsify": "^5.0.4",
		"typescript": "^3.9.10",
		"vscode-test": "^1.6.1",
		"webpack": "^5.64.4",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"npm-run-all": "^4.1.5",
		"tsd": "^0.14.0",
		"vscode-debugprotocol": "1.33.0",
		"vscode-extension-telemetry": "0.1.6",
		"vscode-languageserver-protocol": "3.16.0"
	}
}
