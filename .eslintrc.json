{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion":11,
        "sourceType": "module",
        "ecmaFeatures": {
            "es6": true,
            "browser": true,
            "node": true,
            "mocha": true
        }
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "env":{
        "browser": true
    },
    "rules": {
        "@typescript-eslint/class-name-casing": "off",
        "curly": "off",
        "eqeqeq": "off",
        "no-throw-literal": "warn",
        "semi": "off",
        "@typescript-eslint/semi": ["off"]
    }
}