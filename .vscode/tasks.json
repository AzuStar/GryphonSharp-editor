{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "npm",
            "problemMatcher": "$tsc-watch",
            "label": "WatchTask",
            "isBackground": true,
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "run",
                "runner",
                "watch"
            ]
        },
    ]
}