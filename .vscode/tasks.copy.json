// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"command": "tsc",
	"problemMatcher": "$tsc-watch",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"label": "Master",
			// "script": "watch",
			// "problemMatcher": "$tsc-watch",
			// "isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Editor",
				"Extension"
			]
		},
		{
			"label": "Editor",
			"args": [
				"-w",
				"-p",
				"./src/editor"
			]
		},
		{
			"label": "Extension",
			"args": [
				"-w",
				"-p",
				"./src/extension"
			]
		},
	]
}